<h3>Merge Articles</h3>

<div class=''>
	<%= form_for @article, :url => { :action => "merge", :id => @article.id } do |f| %>
	<%= error_messages_for 'merge' %>
	<div class='clearfix'>
		<label for="merge_with">Article ID</label>
		<div class='input'>
			<%= text_field_tag "merge_with", "", :class => 'large' %>
		</div>
	</div>

	<div class=''>
		<%= submit_tag "Merge" %>  
	</div>

	<% end %>
</div>	